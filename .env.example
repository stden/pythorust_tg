# Telegram API credentials
# Получить на https://my.telegram.org/
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE=+10000000000
TELEGRAM_SESSION_NAME=telegram_session

# User info
USER_ID=your_telegram_user_id
USER_NAME=ExampleUser
MY_ID=your_telegram_user_id          # fallback for scripts, defaults to USER_ID if set
MY_NAME=ExampleUser
LOW_ENGAGEMENT_SENDER_IDS=123456789  # comma-separated user ids for cleanup rules
ZOOM_SENDER_ID=123456789             # user id whose Zoom links should be auto-deleted
ZOOM_URL_PATTERN=zoom.us             # substring to detect unwanted Zoom links

# OpenAI API (для автоответчика)
OPENAI_API_KEY=sk-your-openai-key

# Linear API (для интеграции с Linear)
LINEAR_API_KEY=lin_api_your_key
LINEAR_TEAM_KEY=YOUR_TEAM
LINEAR_PROJECT_ID=optional_project_id
LINEAR_ALLOWED_SENDERS=123456789
LINEAR_DEFAULT_PRIORITY=1
LINEAR_COMMAND_PREFIX=!linear
