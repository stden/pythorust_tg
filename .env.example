# ====================================
# Telegram API Configuration
# Get credentials at https://my.telegram.org/
# ====================================
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_PHONE=+10000000000
TELEGRAM_SESSION_NAME=telegram_session
TELEGRAM_SESSION_FILE=telegram_session   # chat_analysis uses this session name

# ====================================
# User Info
# ====================================
USER_ID=your_telegram_user_id
USER_NAME=ExampleUser
MY_ID=your_telegram_user_id          # fallback for scripts, defaults to USER_ID if set
MY_NAME=ExampleUser
LOW_ENGAGEMENT_SENDER_IDS=123456789  # comma-separated user ids for cleanup rules
ZOOM_SENDER_ID=123456789             # user id whose Zoom links should be auto-deleted
ZOOM_URL_PATTERN=zoom.us             # substring to detect unwanted Zoom links

# ====================================
# N8N Configuration
# ====================================
N8N_URL=https://n8n.vier-pfoten.club
N8N_API_KEY=your_n8n_api_key_here
N8N_RESTART_COMMAND=systemctl restart n8n

# ====================================
# Monitoring Configuration
# ====================================
CHECK_INTERVAL=60
MAX_RETRIES=3
TIMEOUT=10

# ====================================
# MySQL for specialized bots
# ====================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=pythorust_tg
MYSQL_USER=pythorust_tg
MYSQL_PASSWORD=your_mysql_password

# ====================================
# Backup Configuration
# ====================================
BACKUP_DIR=/srv/backups/n8n
RETENTION_DAYS=30
MAX_BACKUPS=50

# ====================================
# Telegram Bots
# ====================================
# Task Assistant Bot (server management)
TASK_ASSISTANT_BOT_TOKEN=your_bot_token_here
ALLOWED_USERS=

# AI Consultant Bot (technical questions)
AI_CONSULTANT_BOT_TOKEN=your_ai_consultant_bot_token_here
AI_CONSULTANT_MODEL=gpt-4o
AI_CONSULTANT_TEMPERATURE=0.3

# Specialized bots (MySQL-backed)
BFL_SALES_BOT_TOKEN=your_bfl_sales_bot_token
CREDIT_EXPERT_BOT_TOKEN=your_credit_expert_bot_token

# ====================================
# Telegram Notifications
# ====================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ====================================
# OpenAI Configuration
# ====================================
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini

# ====================================
# Anthropic / Claude Configuration
# ====================================
ANTHROPIC_API_KEY=your_anthropic_key_here

# ====================================
# Google Gemini Configuration
# ====================================
GOOGLE_API_KEY=your_google_api_key_here

# ====================================
# Linear Configuration
# ====================================
LINEAR_API_KEY=lin_api_your_key
LINEAR_TEAM_KEY=YOUR_TEAM
LINEAR_PROJECT_ID=optional_project_id
LINEAR_ALLOWED_SENDERS=123456789
LINEAR_DEFAULT_PRIORITY=1
LINEAR_COMMAND_PREFIX=!linear

# ====================================
# Bitrix24 Configuration
# ====================================
BITRIX24_WEBHOOK_URL=https://your-domain.bitrix24.ru/rest/1/your_webhook/
BITRIX24_USER_ID=1

# ====================================
# Project Paths
# ====================================
PROJECT_ROOT=/path/to/project
PROMPTS_DIR=${PROJECT_ROOT}/prompts
ANALYSIS_RESULTS_DIR=${PROJECT_ROOT}/analysis_results
CHATS_EXPORT_DIR=${PROJECT_ROOT}/chats

# ====================================
# Chat Analyzer (LLM reports)
# ====================================
CHAT_ANALYZER_LLM_PROVIDER=openai    # openai | claude | gemini
CHAT_ANALYZER_MODEL=gpt-4o-mini
CHAT_ANALYZER_OUTPUT_DIR=./analysis_results

# ====================================
# Cleanup / Filters
# ====================================
ZOOM_CLEANUP_CHATS=                  # comma-separated chat ids/usernames
MEDIA_REACTION_LIMIT=100000          # threshold for media download in read.py
DEFAULT_CHAT=                        # default chat name for read.py/tg.py
FIND_USER_CHAT_ID=                   # chat id for find_user.py helper

# ====================================
# Reactions automation
# ====================================
LIKE_CHAT_ID=0
LIKE_TARGET_USER_ID=0

# ====================================
# MCP Telegram Server
# ====================================
MCP_TELEGRAM_LIMIT=50
MCP_TELEGRAM_MAX_LIMIT=200
MCP_TELEGRAM_LOCK_RETRY=0.25

# ====================================
# Cloud Integrations (optional)
# ====================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_DEFAULT_REGION=eu-central-1

YANDEX_API_KEY=
YANDEX_IAM_TOKEN=
YANDEX_FOLDER_ID=

# ====================================
# Knowledge Base
# ====================================
KNOWLEDGE_BASE_PATH=./knowledge_base

# ====================================
# Logging
# ====================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/pythorust_tg.log

# ====================================
# Environment
# ====================================
ENVIRONMENT=production
DEBUG=false
